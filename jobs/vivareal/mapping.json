{
    "settings": {
        "analysis": {
            "filter": {
                "portuguese_stop": {
                    "type": "stop",
                    "stopwords": "_portuguese_"
                },
                "portuguese_keywords": {
                    "type": "keyword_marker",
                    "keywords": [
                        "exemplo"
                    ]
                },
                "portuguese_stemmer": {
                    "type": "stemmer",
                    "language": "portuguese"
                },
                "synonym_filter": {
                    "type": "synonym_graph",
                    "synonyms": [
                        "terren => terren,lote,area"
                    ]
                }
            },
            "analyzer": {
                "portuguese_analyzer": {
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "portuguese_stop",
                        "portuguese_keywords",
                        "portuguese_stemmer"
                    ]
                },
                "synonym_analyzer": {
                    "tokenizer": "standard",
                    "filter": [
                        "synonym_filter"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "titulo": {
                "type": "text",
                "analyzer": "portuguese_analyzer",
                "search_analyzer": "synonym_analyzer"
            },
            "codigo": {
                "type": "keyword"
            },
            "descricao": {
                "type": "text",
                "analyzer": "portuguese_analyzer",
                "search_analyzer": "synonym_analyzer"
            },
            "id": {
                "type": "keyword"
            },
            "imovel": {
                "properties": {
                    "caracteristicas": {
                        "properties": {
                            "quartos": {
                                "type": "text"
                            },
                            "banheiros": {
                                "type": "text"
                            },
                            "suites": {
                                "type": "text"
                            },
                            "vagas": {
                                "type": "text"
                            },
                            "caracteristicas_adicionais": {
                                "type": "text",
                                "analyzer": "portuguese_analyzer",
                                "search_analyzer": "synonym_analyzer",
                                "fields": {
                                    "original": {
                                        "type": "keyword",
                                        "index": true
                                    }
                                }
                            }
                        }
                    },
                    "endereco": {
                        "properties": {
                            "rua": {
                                "type": "text",
                                "analyzer": "portuguese_analyzer",
                                "fields": {
                                    "original": {
                                        "type": "keyword",
                                        "index": true
                                    }
                                }
                            },
                            "bairro": {
                                "type": "text",
                                "analyzer": "portuguese_analyzer",
                                "fields": {
                                    "original": {
                                        "type": "keyword",
                                        "index": true
                                    }
                                }
                            },
                            "cidade": {
                                "type": "text",
                                "analyzer": "portuguese_analyzer",
                                "fields": {
                                    "original": {
                                        "type": "keyword",
                                        "index": true
                                    }
                                }
                            },
                            "estado": {
                                "type": "text",
                                "analyzer": "portuguese_analyzer",
                                "search_analyzer": "synonym_analyzer",
                                "fields": {
                                    "original": {
                                        "type": "keyword",
                                        "index": true
                                    }
                                }
                            },
                            "cep": {
                                "type": "keyword"
                            },
                            "numero": {
                                "type": "keyword"
                            },
                            "location": {
                                "type": "geo_point"
                            },
                            "has_precision": {
                                "type": "boolean"
                            }
                        }
                    },
                    "area": {
                        "type": "text"
                    },
                    "unidade": {
                        "type": "keyword"
                    },
                    "preco": {
                        "type": "text"
                    },
                    "moeda": {
                        "type": "keyword"
                    },
                    "valor_condominio": {
                        "type": "text"
                    },
                    "valor_iptu": {
                        "type": "text"
                    }
                }
            },
            "hash": {
                "type": "keyword"
            }
        }
    }
}